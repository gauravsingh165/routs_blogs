<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #ffffff;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
  }

  h1 {
    text-align: center;
    color: #4CAF50;
    margin-bottom: 20px;
  }

  p {
    text-align: center;
    margin-bottom: 10px;
  }

  strong {
    color: #000000;
  }

  .actions {
    text-align: center;
    margin-top: 20px;
  }

  .delete-link {
    color: #ff0000;
    text-decoration: none;
    margin-right: 20px;
  }

  .edit-link {
    color: #2196F3;
    text-decoration: none;
  }

  .back-link {
    color: #2196F3;
    text-decoration: none;
    margin-left: 20px;
  }
</style>

<div class="container">
  <h1>Student Details</h1>
  <p><strong>First Name: </strong><%= @system.s_name %></p>
  <p><strong>Age: </strong><%= @system.s_year %></p>
  <p><strong>Favorite System: </strong><%= @system.fav_system %></p>
  <p><strong>Description: </strong><%= @system.desciption %></p>
  <p><strong>Fields: </strong><%= @system.your_field %></p>
  <div class="actions">
    <%= link_to 'DELETE', destroy_system_path(@system), style: 'color: red;', data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
    <%= link_to 'EDIT', edit_system_path(@system), class: 'edit-link' %>
    <%= link_to 'BACK', systems_path, class: 'back-link' %>
  </div>
</div>
